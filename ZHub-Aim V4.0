-- DRAWING POOL (ESP) - same as v3.2/v3.3 pooling
local drawingPool = {}
local function createBoxLines()
    local lines = {}
    local ok, line
    for i=1,12 do
        ok, line = pcall(function()
            return Drawing.new("Line")
        end)
        if ok and line then
            line.Thickness = 2
            line.Visible = false
            table.insert(lines, line)
        else
            -- if Drawing unavailable, stop and return what we have (or nil)
            return nil
        end
    end
    return lines
end

local function getPoolForInstance(inst)
    if not inst then return nil end
    if drawingPool[inst] then
        drawingPool[inst].lastUsed = tick()
        return drawingPool[inst].lines
    end
    local lines = createBoxLines()
    if not lines then return nil end
    drawingPool[inst] = { lines = lines, lastUsed = tick() }
    return lines
end

